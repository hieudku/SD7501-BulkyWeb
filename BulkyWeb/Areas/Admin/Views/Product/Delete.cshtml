@using BulkyWeb.Models
@model Product
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                <hr />

                @*@<div asp-validation-summary="All"></div>*@

                <div class="py-2 col-12">
                    <label asp-for="Title" class="ms-2"> </label>
                    <input asp-for="Title" disabled class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="py-2 col-12">
                    <label asp-for="ISBN" class="ms-2"> </label>
                    <input asp-for="ISBN" disabled class="form-control" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>

                <div class="py-2 col-12">
                    <label asp-for="Author" class="ms-2"> </label>
                    <input asp-for="Author" disabled class="form-control" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>

                <div class="py-2 col-12">
                    <label asp-for="ListPrice" class="ms-2"> </label>
                    <input asp-for="ListPrice" disabled class="form-control" />
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>

                <div class="py-2 col-12">
                    <label asp-for="Price" class="ms-2"> </label>
                    <input asp-for="Price" disabled class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="py-2 col-12">
                    <label asp-for="Price50" class="ms-2"> </label>
                    <input asp-for="Price50" disabled class="form-control" />
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>

                <div class="py-2 col-12">
                    <label asp-for="Price100" class="ms-2"> </label>
                    <input asp-for="Price100" disabled class="form-control" />
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>

                <div class="col-6">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">
                        Back to list
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
